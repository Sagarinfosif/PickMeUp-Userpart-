<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="@dimen/space55"
    android:orientation="vertical">

    <RelativeLayout
        android:id="@+id/search_location"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical">

        <ImageView
            android:id="@+id/loication_icon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/space15"
            android:layout_marginTop="18dp"
            android:src="@drawable/ic_destination" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/space8"
            android:layout_marginLeft="@dimen/space10"
            android:id="@+id/address"
            android:maxLines="2"
            android:layout_centerVertical="true"
            android:layout_toRightOf="@id/loication_icon"
            android:fontFamily="@font/roboto"
            android:text="Railway Station Mohali"
            android:textColor="@color/black"
            android:textSize="@dimen/text16" />
        <!--<TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Daria Chandigarh"
            android:layout_toRightOf="@id/loication_icon"
            android:layout_marginLeft="@dimen/dp_10"
            android:fontFamily="@font/gruppo"
            android:textSize="@dimen/sp_14"
            android:layout_below="@id/address"
            />-->
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/lightgrey"
            android:layout_alignParentBottom="true"/>
    </RelativeLayout>


</LinearLayout>