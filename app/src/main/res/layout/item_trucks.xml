<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">


    <androidx.cardview.widget.CardView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/space10"
        app:cardCornerRadius="@dimen/space15"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent">


        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"

            >

            <androidx.appcompat.widget.AppCompatImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                android:src="@drawable/ic_cars"
                android:id="@+id/imgCar"
                android:layout_marginTop="@dimen/space10"
                android:layout_marginLeft="@dimen/space30"
                android:layout_marginRight="@dimen/space35"
                />
<androidx.appcompat.widget.AppCompatTextView
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    app:layout_constraintTop_toBottomOf="@id/imgCar"
    app:layout_constraintLeft_toLeftOf="@id/imgCar"
    app:layout_constraintRight_toRightOf="@id/imgCar"
    android:text="Car"
    android:id="@+id/txtCar"
    style="@style/textBalck16sp"
    />

            <androidx.appcompat.widget.AppCompatTextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="500$"
                app:layout_constraintTop_toBottomOf="@id/txtCar"
                app:layout_constraintLeft_toLeftOf="@id/txtCar"
                app:layout_constraintRight_toRightOf="@id/txtCar"
                app:layout_constraintBottom_toBottomOf="parent"
                android:layout_marginBottom="@dimen/space5"
                style="@style/textBalck16sp"
                />


        </androidx.constraintlayout.widget.ConstraintLayout>


    </androidx.cardview.widget.CardView>


</androidx.constraintlayout.widget.ConstraintLayout>